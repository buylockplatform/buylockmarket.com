  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global pre-request script for Vendor API",
          "console.log('Making vendor request to:', pm.request.url.toString());",
          "",
          "// Ensure vendor ID header is set for authenticated requests",
          "const vendorId = pm.environment.get('vendor_id');",
          "const authExcludedPaths = ['/api/vendor/login', '/api/categories', '/api/subcategories', '/api/brands', '/api/service-categories'];",
          "const currentPath = pm.request.url.getPath();",
          "",
          "// Add vendor ID header for authenticated endpoints",
          "if (vendorId && !authExcludedPaths.some(path => currentPath.includes(path))) {",
          "    pm.request.headers.add({",
          "        key: 'x-vendor-id',",
          "        value: vendorId",
          "    });",
          "}",
          "",
          "// Set common headers if not already set",
          "if (!pm.request.headers.has('Content-Type') && ['POST', 'PUT', 'PATCH'].includes(pm.request.method)) {",
          "    pm.request.headers.add({",
          "        key: 'Content-Type',",
          "        value: 'application/json'",
          "    });",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script for Vendor API",
          "pm.test('Response time is less than 5 seconds', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('Response has valid JSON format (when applicable)', function () {",
          "    if (pm.response.headers.get('Content-Type') && pm.response.headers.get('Content-Type').includes('application/json')) {",
          "        pm.response.to.be.json;",
          "    }",
          "});",
          "",
          "// Check for vendor authentication errors",
          "if (pm.response.code === 401) {",
          "    pm.test('Vendor authentication required', function () {",
          "        console.log('Authentication failed - check vendor_id in environment variables');",
          "    });",
          "}"
        ]
      }
    }
  ]
