        {
          "name": "Register Customer (JWT)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "if (pm.response.code === 201) {",
                  "    pm.test('Registration successful with tokens', function () {",
                  "        var jsonData = pm.response.json();",
                  "        pm.expect(jsonData).to.have.property('user');",
                  "        pm.expect(jsonData).to.have.property('tokens');",
                  "        pm.expect(jsonData.tokens).to.have.property('accessToken');",
                  "        pm.expect(jsonData.tokens).to.have.property('refreshToken');",
                  "        ",
                  "        // Store tokens for subsequent requests",
                  "        pm.environment.set('access_token', jsonData.tokens.accessToken);",
                  "        pm.environment.set('refresh_token', jsonData.tokens.refreshToken);",
                  "        pm.environment.set('customer_id', jsonData.user.id);",
                  "        pm.environment.set('customer_email', jsonData.user.email);",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Auth-Type",
                "value": "token",
                "description": "Request JWT tokens instead of session"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"mobile@example.com\",\n  \"firstName\": \"Mobile\",\n  \"lastName\": \"User\",\n  \"phone\": \"+254712345678\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\",\n  \"country\": \"Kenya\"\n}",
              "options": {
